APP_NAME=HARelay
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PROXY_DOMAIN=harelay.test
APP_PROXY_PORT=8000
APP_PROXY_SECURE=false
ADMIN_EMAIL=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - SQLite for development, MySQL/PostgreSQL for production
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=harelay
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.harelay.test

BROADCAST_CONNECTION=null
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis

# Redis (required for tunnel IPC and caching)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# For development: use 'log' to log emails instead of sending
# For production: use 'smtp' with your mail provider
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="mail@harelay.com"
MAIL_FROM_NAME="${APP_NAME}"

# Production SMTP example (Mailgun, Postmark, etc.):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=postmaster@mg.harelay.com
# MAIL_PASSWORD=your-mailgun-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="mail@harelay.com"
# MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# HARelay Tunnel Server (Workerman)
# The tunnel server handles app connections and WebSocket proxying
TUNNEL_HOST=0.0.0.0
TUNNEL_PORT=8081
WS_PROXY_PORT=8082
TUNNEL_DEBUG=false

# WebSocket proxy for browser connections
# In development: use WS_PROXY_PORT directly
# In production: set WS_PROXY_PATH=/wss to proxy through Nginx on standard ports
WS_PROXY_PATH=
